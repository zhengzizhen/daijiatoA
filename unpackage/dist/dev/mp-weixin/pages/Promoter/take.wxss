.tabs {
  height: 88rpx;
  line-height: 88rpx;
  background-color: white;
  justify-content: space-around;
}
.tabs ._p {
  font-size: 30rpx;
  font-weight: 500;
  color: #222222;
}
.tabs .green:nth-child(1) {
  color: #FF8331;
}
.tabs .green:nth-child(2) {
  color: #35C77C;
}
.tabs .green:nth-child(3) {
  color: #999999;
}
.card {
  width: 690rpx;
  height: 170rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  border-radius: 20rpx;
  margin: 20rpx 30rpx;
  padding: 20rpx;
}
.card .img {
  width: 120rpx;
  height: 120rpx;
  background: #999999;
  border-radius: 20rpx;
}
.card .center {
  margin-left: 20rpx;
}
.card .center ._p {
  font-size: 30rpx;
  font-weight: 500;
  color: #222222;
}
.card .center ._p:nth-child(2) {
  margin-top: 10rpx;
}
.card .posia {
  right: 16rpx;
  top: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #FF8331;
}
.card .success {
  color: #35C77C !important;
}
.card .cancel {
  color: #999999;
}

